@model IEnumerable<Mvc_Crud_Op.Models.UplodImage>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-3 offset-2">
             <table class="table table-bordered">
                 <thead >
                     <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Action</th>
                     </tr>
                 </thead>
                 @foreach (var item in Model)
                 {
                    <tr class="text-center">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><img src="@item.ImgPath" height="80px;" width="80px;"/></td>
                        <td>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Upload" asp-route-id="@item.Id">Delete</a>
                            
                        </td>

                    </tr> 
                 }
             </table>
        </div>
    </div>
    
</div>

